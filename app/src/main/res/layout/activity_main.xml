<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6DCAC"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="700px"
        android:layout_height="700px"
        android:layout_marginBottom="550px"
        android:src="@mipmap/img_profile"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOCHAMMAD YUSUF PRATAMA"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="70px"
        android:layout_marginTop="300px"
        android:textColor="#01204E"
        android:fontFamily="@font/playfair_display_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPN Veteran Jawa Timur"
        android:textAlignment="center"
        android:textSize="60px"
        android:layout_marginTop="480px"
        android:textColor="#01204E"
        android:fontFamily="@font/playfair_display_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>